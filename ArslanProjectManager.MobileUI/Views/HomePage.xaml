<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ArslanProjectManager.MobileUI.ViewModels"
             xmlns:core="clr-namespace:ArslanProjectManager.Core.DTOs;assembly=ArslanProjectManager.Core"
             x:Class="ArslanProjectManager.MobileUI.Views.HomePage"
             x:DataType="models:HomeViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
             Title="Home"
             x:Name="HomePageRoot">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- Summary Cards -->
            <Grid ColumnDefinitions="*,*,*" Margin="0,10,0,16" ColumnSpacing="8">
                <!-- Projects Card -->
                <Border Grid.Column="0" 
                        Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                        StrokeThickness="1.5"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                        Margin="2,0" 
                        Padding="18">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="&#xf542;" Style="{StaticResource FontAwesomeIconLarge}" HorizontalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource Blue700}, Dark={StaticResource Cyan800}}"/>
                        <Label Text="Projects" Style="{StaticResource AccentLabelStyle}" FontSize="18" HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalProjects}" Style="{StaticResource TitleLabelStyle}" FontSize="28" HorizontalOptions="Center"/>
                        <Label Text="Completed:" Style="{StaticResource BodyLabelStyle}" HorizontalOptions="Center" FontSize="13"/>
                        <Label Text="{Binding CompletedProjects}" Style="{StaticResource BodyLabelStyle}" HorizontalOptions="Center" FontSize="13" TextColor="{StaticResource Success}"/>
                        <ProgressBar Progress="{Binding ProjectCompletionRate}" />
                    </VerticalStackLayout>
                </Border>
                <!-- Tasks Card -->
                <Border Grid.Column="1" 
                        Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                        StrokeThickness="1.5"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                        Margin="2,0" 
                        Padding="18">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="&#xf0ae;" Style="{StaticResource FontAwesomeIconLarge}" HorizontalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource Green700}, Dark={StaticResource Green400}}"/>
                        <Label Text="Tasks" Style="{StaticResource AccentLabelStyle}" FontSize="18" HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalTasks}" Style="{StaticResource TitleLabelStyle}" FontSize="28" HorizontalOptions="Center"/>
                        <Label Text="Completed:" Style="{StaticResource BodyLabelStyle}" HorizontalOptions="Center" FontSize="13"/>
                        <Label Text="{Binding CompletedTasks}" Style="{StaticResource BodyLabelStyle}" HorizontalOptions="Center" FontSize="13" TextColor="{StaticResource Success}"/>
                        <ProgressBar Progress="{Binding TaskCompletionRate}" />
                    </VerticalStackLayout>
                </Border>
                <!-- Teams Card -->
                <Border Grid.Column="2" 
                        Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                        StrokeThickness="1.5"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                        Margin="2,0" 
                        Padding="18">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="&#xf0c0;" Style="{StaticResource FontAwesomeIconLarge}" HorizontalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource Purple700}, Dark={StaticResource Purple400}}"/>
                        <Label Text="Teams" Style="{StaticResource AccentLabelStyle}" FontSize="18" HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalTeams}" Style="{StaticResource TitleLabelStyle}" FontSize="28" HorizontalOptions="Center"/>
                        <Label Text="Members:" Style="{StaticResource BodyLabelStyle}" HorizontalOptions="Center" FontSize="13"/>
                        <Label Text="{Binding TotalMembers}" Style="{StaticResource BodyLabelStyle}" HorizontalOptions="Center" FontSize="13" TextColor="{StaticResource Success}"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Recent Tasks Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Recent Updated Tasks" Style="{StaticResource AccentLabelStyle}" FontSize="18" Margin="0,20,0,10"/>
                <CollectionView ItemsSource="{Binding RecentTasks}" Margin="0,0,0,24">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="core:RecentTaskDto">
                            <Border Margin="0,0,0,12" 
                                    Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                                    StrokeThickness="1.5"
                                    StrokeShape="RoundRectangle 12"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                                    Padding="16">
                                <VerticalStackLayout Spacing="8">
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="&#xf0ae;" Style="{StaticResource FontAwesomeIcon}" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource Green700}, Dark={StaticResource Green400}}"/>
                                        <Label Text="{Binding TaskName}" Style="{StaticResource TitleLabelStyle}" VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding Description}" Style="{StaticResource BodyLabelStyle}" />
                                    <HorizontalStackLayout Spacing="8">
                                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Blue700}, Dark={StaticResource Cyan800}}" Padding="8,2" StrokeShape="RoundRectangle 8">
                                            <Label Text="{Binding ProjectName, StringFormat='Project: {0}'}" FontSize="13" TextColor="{StaticResource White}"/>
                                        </Border>
                                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" Padding="8,2" StrokeShape="RoundRectangle 8">
                                            <Label Text="{Binding UpdatedDate, StringFormat='Updated: {0:dd.MM.yyyy}'}" FontSize="13" TextColor="{StaticResource White}"/>
                                        </Border>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Recent Projects Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Recent Projects" Style="{StaticResource AccentLabelStyle}" FontSize="18" Margin="0,0,0,10"/>
                <CollectionView ItemsSource="{Binding RecentProjects}" Margin="0,0,0,24">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="core:RecentProjectDto">
                            <Border Margin="0,0,0,12" 
                                    Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                                    StrokeThickness="1.5"
                                    StrokeShape="RoundRectangle 12"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                                    Padding="16">
                                <VerticalStackLayout Spacing="8">
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="&#xf542;" Style="{StaticResource FontAwesomeIcon}" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource Blue700}, Dark={StaticResource Cyan800}}"/>
                                        <Label Text="{Binding ProjectName}" Style="{StaticResource TitleLabelStyle}" VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding Description}" Style="{StaticResource BodyLabelStyle}" />
                                    <HorizontalStackLayout Spacing="8">
                                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Purple700}, Dark={StaticResource Purple400}}" Padding="8,2" StrokeShape="RoundRectangle 8">
                                            <Label Text="{Binding TeamName, StringFormat='Team: {0}'}" FontSize="13" TextColor="{StaticResource White}"/>
                                        </Border>
                                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" Padding="8,2" StrokeShape="RoundRectangle 8">
                                            <Label Text="{Binding CreatedDate, StringFormat='Created: {0:dd.MM.yyyy}'}" FontSize="13" TextColor="{StaticResource White}"/>
                                        </Border>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>