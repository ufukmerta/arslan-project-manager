<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArslanProjectManager.MobileUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ArslanProjectManager.MobileUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ArslanProjectManager.MobileUI">

    <ShellContent Route="login" ContentTemplate="{DataTemplate local:LoginPage}" />
    <TabBar Shell.TabBarIsVisible="True">
        <Tab Title="Home" Route="HomePage" Icon="home.png">
            <ShellContent Route="home" ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Projects" Icon="projects.png">
            <ShellContent Route="projects" ContentTemplate="{DataTemplate local:ProjectsPage}" />
        </Tab>
        <Tab Title="Tasks" Icon="tasks.png">
            <ShellContent Route="tasks" ContentTemplate="{DataTemplate local:TasksPage}" />
        </Tab>
        <Tab Title="Profile" Icon="profile_tab.png">
            <ShellContent Route="profile" ContentTemplate="{DataTemplate local:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
