@{
    ViewData["Title"] = "Bad Request";
}

<div class="container-fluid px-0">
    <!-- Bad Request Section -->
    <section class="unauthorized-section py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10 text-center">
                    <div class="unauthorized-content">
                        <div class="error-icon mb-1">
                            <i class="bi bi-exclamation-octagon text-danger"></i>
                        </div>
                        <h1 class="display-4 fw-bold text-danger mb-3">400 - Bad Request</h1>
                        <p class="lead mb-4">Sorry, the request could not be processed due to invalid input or malformed syntax. Please check your request and try again.</p>

                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            <strong>Bad Request:</strong> The server could not understand your request. Please ensure all required fields are filled out correctly.
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-3">
                            <a asp-controller="Home" asp-action="Index2" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-house me-2"></i>Go Home
                            </a>
                            <a href="javascript:history.back()" class="btn btn-primary btn-lg px-4 me-md-2">
                                <i class="bi bi-arrow-left me-1"></i>Try Again
                            </a>
                        </div>

                        <div class="mt-3">
                            <h5 class="text-muted mb-3">Need Help?</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="help-card">
                                        <i class="bi bi-question-circle text-primary mb-2"></i>
                                        <h6>Check Your Input</h6>
                                        <p class="small text-muted">Review the information you entered and ensure all fields are valid.</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="help-card">
                                        <i class="bi bi-envelope text-primary mb-2"></i>
                                        <h6>Contact Support</h6>
                                        <p class="small text-muted">If you believe this is a mistake, get help from our team.</p>
                                        <a href="mailto:ufukmertarslan@gmail.com" class="btn btn-sm btn-outline-primary">Contact Support</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Additional Info Section -->
    <section class="info-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4" style="box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);">
                            <h4 class="card-title text-center mb-4">
                                <i class="bi bi-info-circle text-primary me-2"></i>
                                Why am I seeing this page?
                            </h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>
                                            The request was missing required information
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>
                                            Invalid or malformed data was submitted
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>
                                            The request could not be processed by the server
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>
                                            There was a problem with your input
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .unauthorized-section {
        min-height: 60vh;
        display: flex;
        align-items: center;
    }

    .unauthorized-content {
        background: white;
        border-radius: 15px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .error-icon {
        font-size: 5rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }

    .help-card {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
        height: 100%;
    }

        .help-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .help-card i {
            font-size: 2rem;
        }

    .text-primary {
        color: #0077B6 !important;
    }

    .btn-primary {
        background-color: #0077B6;
        border-color: #0077B6;
    }

        .btn-primary:hover {
            background-color: #005a8b;
            border-color: #005a8b;
        }

    .btn-outline-primary {
        color: #0077B6;
        border-color: #0077B6;
    }

        .btn-outline-primary:hover {
            background-color: #0077B6;
            border-color: #0077B6;
        }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }

    @@media (max-width: 768px) {
        .unauthorized-content {
            padding: 2rem 1.5rem;
        }

        .error-icon {
            font-size: 4rem;
        }

        .display-4 {
            font-size: 2.5rem;
        }
    }
</style> 