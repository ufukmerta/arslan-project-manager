@{
    ViewData["Title"] = "Too Many Requests";
}

<div class="container-fluid px-0">
    <!-- Too Many Requests Section -->
    <section class="unauthorized-section py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10 text-center">
                    <div class="unauthorized-content">
                        <div class="error-icon mb-1">
                            <i class="bi bi-hourglass-split text-info"></i>
                        </div>
                        <h1 class="display-4 fw-bold text-info mb-3">429 - Too Many Requests</h1>
                        <p class="lead mb-4">You have sent too many requests in a short time. Please wait a moment before trying again.</p>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>Rate limit exceeded:</strong> Our API limits how often you can make requests. Please wait and try again shortly.
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-3">
                            <a asp-controller="Home" asp-action="Index2" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-house me-2"></i>Go Home
                            </a>
                            <a href="javascript:history.back()" class="btn btn-primary btn-lg px-4 me-md-2">
                                <i class="bi bi-arrow-clockwise me-1"></i>Try Again
                            </a>
                        </div>

                        <div class="mt-3">
                            <h5 class="text-muted mb-3">Why am I seeing this?</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="help-card">
                                        <i class="bi bi-speedometer2 text-primary mb-2"></i>
                                        <h6>Request limit</h6>
                                        <p class="small text-muted">To keep the service fast for everyone, we limit how many requests each user can make in a short time.</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="help-card">
                                        <i class="bi bi-clock text-primary mb-2"></i>
                                        <h6>What to do</h6>
                                        <p class="small text-muted">Wait a minute and try again. If you are scripting or automating, slow down your requests.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .unauthorized-section {
        min-height: 60vh;
        display: flex;
        align-items: center;
    }

    .unauthorized-content {
        background: white;
        border-radius: 15px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .error-icon {
        font-size: 5rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }

    .help-card {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
        height: 100%;
    }

    .help-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .help-card i {
        font-size: 2rem;
    }

    .text-primary {
        color: #0077B6 !important;
    }

    .btn-primary {
        background-color: #0077B6;
        border-color: #0077B6;
    }

    .btn-primary:hover {
        background-color: #005a8b;
        border-color: #005a8b;
    }

    .btn-outline-primary {
        color: #0077B6;
        border-color: #0077B6;
    }

    .alert-info {
        background-color: #cff4fc;
        border-color: #b6effb;
        color: #055160;
    }

    @@media (max-width: 768px) {
        .unauthorized-content {
            padding: 2rem 1.5rem;
        }

        .error-icon {
            font-size: 4rem;
        }

        .display-4 {
            font-size: 2.5rem;
        }
    }
</style>
