@model DeleteProjectViewModel

@{
    ViewData["Title"] = "Delete Project";
}
@if (string.IsNullOrEmpty(ViewData["errorMessage"]?.ToString()))
{
    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <h2>
                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>
                    Delete Project
                </h2>
                <h5 class="text-danger">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    Are you sure you want to delete this project? This action cannot be undone.
                </h5>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Project Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <h4>
                                    <i class="bi bi-folder text-warning me-2"></i>
                                    @Model.ProjectName
                                </h4>
                                <p class="text-muted mb-3">
                                    <i class="bi bi-chat-text me-2"></i>
                                    @Model.Description
                                </p>
                                <div class="d-flex gap-2 flex-wrap mb-4">
                                    <span class="badge bg-primary">
                                        <i class="bi bi-people me-1"></i>
                                        Team: @Model.TeamName
                                    </span>
                                    <span class="badge bg-info">
                                        <i class="bi bi-list-task me-1"></i>
                                        Tasks: @Model.TaskCount
                                    </span>
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Completed: @Model.CompletedTaskCount
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-calendar-plus text-success me-2"></i> Start Date
                                    </label>
                                    <p class="mb-0">@Model.StartDate.ToShortDateString()</p>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Delete" class="mt-4">
                            <input type="hidden" asp-for="ProjectId" />
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Project
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<style>
    .badge {
        font-size: 0.9em;
        padding: 0.5em 1em;
    }
</style> 