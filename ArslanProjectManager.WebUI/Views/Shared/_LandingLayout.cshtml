<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arslan Project Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Math&display=swap" rel="stylesheet">
    <style>
        .btn-getfree {
            background-color: #00B4D8;
            border-color: #00B4D8;
            color: #FFFFFF;
        }

        .btn-getfree:hover,
        .btn-getfree:focus {
            background-color: #0096C7;
            color: #FFFFFF;
        }

        .link-login {
            color: #0077B6;
        }

        .link-login:hover,
        .link-login:focus {
            color: #023E8A;
            text-decoration: underline;
            text-decoration-color: #023E8A;
        }

        .navbar-brand:hover,
        .navbar-brand:focus {
            color: #023E8A !important;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm border-bottom box-shadow mb-3" style="background-color:#FFFFFF;color:#023E8A;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index" style="color:#03045E;">
                    <img src="/img/logo.png" alt="Logo" height="35" class="d-inline-block align-middle me-2">
                    <span class="align-middle fw-semibold">Arslan Project Manager</span>
                </a>
                <div class="ms-auto d-flex align-items-center gap-3">
                    <a class="btn btn-getfree" asp-controller="User" asp-action="Register">
                        Get it Free
                    </a>
                    <a class="text-decoration-none fw-semibold link-login" asp-controller="User" asp-action="Login" asp-route-RedirectUrl="Home">
                        Login
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>About</h5>
                    <p>Arslan Project Manager is a powerful tool designed to help teams collaborate and manage projects efficiently.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="User" asp-action="Login" class="link">Login</a></li>
                        <li><a asp-controller="User" asp-action="Register" class="link">Sign Up</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="link">Privacy Policy</a></li>
                        <li><a href="#" class="link">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact</h5>
                    <ul class="list-unstyled">
                        <li><a href="mailto:ufukmertarslan@gmail.com"><i class="bi bi-envelope me-2"></i>ufukmertarslan@gmail.com</a></li>
                        <li><i class="bi bi-telephone me-2"></i>+1 (555) 123-4567</li>
                    </ul>
                    <div class="social-links mt-3">
                        <a href="#" class="me-3 link"><i class="bi bi-twitter"></i></a>
                        <a href="https://www.linkedin.com/in/ufuk-mert-arslan" target="_blank" class="me-3 link"><i class="bi bi-linkedin"></i></a>
                        <a href="https://www.github.com/ufukmerta" target="_blank" class="me-3 link"><i class="bi bi-github"></i></a>
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center">
                &copy; @DateTime.Now.Year - Arslan Project Manager - All rights reserved
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 