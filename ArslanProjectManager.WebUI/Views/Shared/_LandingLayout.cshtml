<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arslan Project Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand navbar-darker" asp-controller="Home" asp-action="Index">
                    <img src="/img/logo.png" alt="Logo" height="35" class="d-inline-block align-middle me-2">
                    <span class="align-middle">Arslan Project Manager</span>
                </a>                
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>About</h5>
                    <p>Arslan Project Manager is a powerful tool designed to help teams collaborate and manage projects efficiently.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="User" asp-action="Login" class="link">Login</a></li>
                        <li><a asp-controller="User" asp-action="Register" class="link">Sign Up</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="link">Privacy Policy</a></li>
                        <li><a href="#" class="link">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-envelope me-2"></i>ufukmertarslan@gmail.com</li>
                        <li><i class="bi bi-telephone me-2"></i>+1 (555) 123-4567</li>
                    </ul>
                    <div class="social-links mt-3">
                        <a href="#" class="me-3 link"><i class="bi bi-twitter"></i></a>
                        <a href="https://www.linkedin.com/in/ufuk-mert-arslan-a45861356/" class="me-3 link"><i class="bi bi-linkedin"></i></a>
                        <a href="https://www.github.com/ufukmerta" class="me-3 link"><i class="bi bi-github"></i></a>
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center">
                &copy; @DateTime.Now.Year - Arslan Project Manager - All rights reserved
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 