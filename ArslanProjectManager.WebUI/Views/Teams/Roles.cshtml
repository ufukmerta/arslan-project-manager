            var canViewTasks = permissions.canViewTasks || permissions.CanViewTasks || false;
            var canEditTasks = permissions.canEditTasks || permissions.CanEditTasks || false;
            var canDeleteTasks = permissions.canDeleteTasks || permissions.CanDeleteTasks || false;
            var canAssignTasks = permissions.canAssignTasks || permissions.CanAssignTasks || false;
            var canViewProjects = permissions.canViewProjects || permissions.CanViewProjects || false;
