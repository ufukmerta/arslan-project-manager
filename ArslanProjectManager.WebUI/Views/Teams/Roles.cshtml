@model TeamRolesViewModel
@using System.Security.Claims
@using System.Text.Json

@{
    ViewData["Title"] = "Team Roles: " + @Model.TeamName;
    int currentUserId = Convert.ToInt32(User.FindFirstValue(ClaimTypes.NameIdentifier));
    bool canManageRoles = Model.CanManageRoles;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h2>
                    <i class="bi bi-shield text-primary me-2"></i>
                    Team Roles: @Model.TeamName
                </h2>
                <p class="text-muted">
                    <i class="bi bi-info-circle me-2"></i>
                    View @(!canManageRoles ? "and manage" : "") roles and permissions for this team
                </p>
            </div>
            <div>
                <a asp-action="Details" asp-route-id="@Model.TeamId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Team
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-shield"></i> Available Roles
                </h5>
                @if (canManageRoles)
                {
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createRoleModal">
                            <i class="bi bi-plus-circle"></i> Create New Role
                        </button>
                        <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#cloneRoleModal">
                            <i class="bi bi-files"></i> Clone System Role
                        </button>
                    </div>
                }
                else
                {
                    <span class="badge bg-secondary">Read-only</span>
                }
            </div>
            <div class="card-body">
                @if (!Model.Roles.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-shield fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No roles found</h5>
                        <p class="text-muted">Create your first team-specific role to get started.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="rolesTable">
                            <thead>
                                <tr>
                                    <th><i class="bi bi-hash"></i> </th>
                                    <th><i class="bi bi-shield"></i> Role Name</th>
                                    <th><i class="bi bi-tag"></i> Type</th>
                                    <th><i class="bi bi-people"></i> Users</th>
                                    <th class="text-center"><i class="bi bi-list-check"></i> Task Permissions</th>
                                    <th class="text-center"><i class="bi bi-folder"></i> Project Permissions</th>
                                    <th class="text-center"><i class="bi bi-people"></i> Team Management</th>
                                    @if (canManageRoles)
                                    {
                                        <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 1;
                                }
                                @foreach (var role in Model.Roles)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>
                                            <strong>@role.RoleName</strong>
                                        </td>
                                        <td>
                                            @if (role.IsSystemRole)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-shield-check me-1"></i> System Role
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-shield me-1"></i> Team Role
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-people me-1"></i> @role.UserCount
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column gap-1">
                                                <small>
                                                    @if (role.Permissions.CanViewTasks)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>View</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>View</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanEditTasks)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Edit</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Edit</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanDeleteTasks)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Delete</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Delete</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanAssignTasks)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Assign</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Assign</span>
                                                    }
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column gap-1">
                                                <small>
                                                    @if (role.Permissions.CanViewProjects)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>View</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>View</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanEditProjects)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Edit</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Edit</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanDeleteProjects)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Delete</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Delete</span>
                                                    }
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column gap-1">
                                                <small>
                                                    @if (role.Permissions.CanInviteMembers)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Invite</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Invite</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanRemoveMembers)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Remove</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Remove</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanManageRoles)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Manage Roles</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Manage Roles</span>
                                                    }
                                                </small>
                                                <small>
                                                    @if (role.Permissions.CanManagePermissions)
                                                    {
                                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Manage Permissions</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Manage Permissions</span>
                                                    }
                                                </small>
                                            </div>
                                        </td>
                                        @if (canManageRoles)
                                        {
                                            <td class="text-center">
                                                @if (!role.IsSystemRole)
                                                {
                                                    
                                                    var editPermsJson = System.Net.WebUtility.HtmlEncode(System.Text.Json.JsonSerializer.Serialize(role.Permissions));
                                                    
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-sm btn-warning btn-edit-role"
                                                                data-role-id="@role.Id"
                                                                data-role-name="@role.RoleName"
                                                                data-role-user-count="@role.UserCount"
                                                                data-role-permissions="@editPermsJson">
                                                            <i class="bi bi-pencil"></i> Edit
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-danger btn-delete-role"
                                                                data-role-id="@role.Id"
                                                                data-role-name="@role.RoleName"
                                                                data-role-user-count="@role.UserCount">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </div>
                                                }
                                                else
                                                {
                                                    var clonePermsJson = System.Net.WebUtility.HtmlEncode(System.Text.Json.JsonSerializer.Serialize(role.Permissions));
                                                    <button type="button" class="btn btn-sm btn-info btn-clone-role"
                                                            data-role-id="@role.Id"
                                                            data-role-name="@role.RoleName"
                                                            data-permissions="@clonePermsJson">
                                                        <i class="bi bi-files"></i> Clone
                                                    </button>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

