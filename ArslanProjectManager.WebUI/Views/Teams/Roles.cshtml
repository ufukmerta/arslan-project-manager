        // Helper function to update permissions preview
        function updateClonePreview(permissions, roleName) {
            if (permissions) {
                // Show preview
                $('#clonePermissionsPreview').show();
                
                // Handle both camelCase and PascalCase property names
                var canViewTasks = permissions.canViewTasks || permissions.CanViewTasks || false;
                var canEditTasks = permissions.canEditTasks || permissions.CanEditTasks || false;
                var canDeleteTasks = permissions.canDeleteTasks || permissions.CanDeleteTasks || false;
                var canAssignTasks = permissions.canAssignTasks || permissions.CanAssignTasks || false;
                var canViewProjects = permissions.canViewProjects || permissions.CanViewProjects || false;
                var canEditProjects = permissions.canEditProjects || permissions.CanEditProjects || false;
                var canDeleteProjects = permissions.canDeleteProjects || permissions.CanDeleteProjects || false;
                var canInviteMembers = permissions.canInviteMembers || permissions.CanInviteMembers || false;
                var canRemoveMembers = permissions.canRemoveMembers || permissions.CanRemoveMembers || false;
                var canManageRoles = permissions.canManageRoles || permissions.CanManageRoles || false;
                var canManagePermissions = permissions.canManagePermissions || permissions.CanManagePermissions || false;
                
                // Update task permissions
                var taskPerms = [];
                if (canViewTasks) taskPerms.push('<span class="badge bg-success">View</span>');
                if (canEditTasks) taskPerms.push('<span class="badge bg-success">Edit</span>');
                if (canDeleteTasks) taskPerms.push('<span class="badge bg-success">Delete</span>');
                if (canAssignTasks) taskPerms.push('<span class="badge bg-success">Assign</span>');
                $('#cloneTaskPerms').html(taskPerms.length > 0 ? taskPerms.join(' ') : '<span class="text-muted">None</span>');
                
                // Update project permissions
                var projectPerms = [];
                if (canViewProjects) projectPerms.push('<span class="badge bg-success">View</span>');
                if (canEditProjects) projectPerms.push('<span class="badge bg-success">Edit</span>');
                if (canDeleteProjects) projectPerms.push('<span class="badge bg-success">Delete</span>');
                $('#cloneProjectPerms').html(projectPerms.length > 0 ? projectPerms.join(' ') : '<span class="text-muted">None</span>');
                
                // Update team management permissions
                var teamPerms = [];
                if (canInviteMembers) teamPerms.push('<span class="badge bg-success">Invite</span>');
                if (canRemoveMembers) teamPerms.push('<span class="badge bg-success">Remove</span>');
                if (canManageRoles) teamPerms.push('<span class="badge bg-success">Manage Roles</span>');
                if (canManagePermissions) teamPerms.push('<span class="badge bg-success">Manage Permissions</span>');
                $('#cloneTeamPerms').html(teamPerms.length > 0 ? teamPerms.join(' ') : '<span class="text-muted">None</span>');
                
                // Suggest a name based on the source role
                if (roleName && !$('#cloneNewRoleName').val()) {
                    $('#cloneNewRoleName').val(roleName + ' (Copy)');
                }
            } else {
                $('#clonePermissionsPreview').hide();
            }
        }

