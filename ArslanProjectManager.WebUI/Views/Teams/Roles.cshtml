            var canRemoveMembers = permissions.canRemoveMembers || permissions.CanRemoveMembers || false;
            var canManageRoles = permissions.canManageRoles || permissions.CanManageRoles || false;
            var canManagePermissions = permissions.canManagePermissions || permissions.CanManagePermissions || false;
            
            $('#editCanViewTasks').prop('checked', canViewTasks);
            $('#editCanEditTasks').prop('checked', canEditTasks);
            $('#editCanDeleteTasks').prop('checked', canDeleteTasks);
            $('#editCanAssignTasks').prop('checked', canAssignTasks);
            $('#editCanViewProjects').prop('checked', canViewProjects);
            $('#editCanEditProjects').prop('checked', canEditProjects);
