<!-- Clone Role Modal -->
<div class="modal fade" id="cloneRoleModal" tabindex="-1" aria-labelledby="cloneRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="cloneRoleForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="cloneRoleModalLabel">
                        <i class="bi bi-files"></i> Clone System Role
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="TeamId" value="@Model.TeamId" />
                    <div class="mb-3">
                        <label for="cloneSourceRoleId" class="form-label">Source System Role <span class="text-danger">*</span></label>
                        <select class="form-select" id="cloneSourceRoleId" name="SourceRoleId" required>
                            <option value="">-- Select a system role to clone --</option>
                            @foreach (var role in Model.Roles.Where(r => r.IsSystemRole).OrderBy(r => r.RoleName))
                            {
                                var permissionsJsonString = Json.Serialize(role.Permissions).ToString();
                                var permissionsJson = System.Net.WebUtility.HtmlEncode(permissionsJsonString);
                                <option value="@role.Id" 
                                        data-permissions="@permissionsJson" 
                                        data-rolename="@role.RoleName">
                                    @role.RoleName
                                </option>
                            }
                        </select>
                        <small class="form-text text-muted">Select a system role to clone as a team-specific role</small>
                    </div>
                    <div class="mb-3">
                        <label for="cloneNewRoleName" class="form-label">New Role Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="cloneNewRoleName" name="NewRoleName" required maxlength="100" placeholder="Enter name for the new role" />
                        <small class="form-text text-muted">This will be the name of your new team-specific role</small>
                    </div>
                    <div id="clonePermissionsPreview" class="card mb-3" style="display: none;">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="bi bi-eye"></i> Permissions Preview</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <h6 class="text-primary small">Task Permissions</h6>
                                    <div id="cloneTaskPerms" class="small"></div>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="text-primary small">Project Permissions</h6>
                                    <div id="cloneProjectPerms" class="small"></div>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="text-primary small">Team Management</h6>
                                    <div id="cloneTeamPerms" class="small"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note:</strong> The new role will have the same permissions as the selected system role. You can edit it after creation.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-info">
                        <i class="bi bi-files"></i> Clone Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <input type="hidden" id="js-roles-data"
           data-team-id="@Model.TeamId"
           data-url-create="@Url.Action("CreateRole", "Teams")"
           data-url-update="@Url.Action("UpdateRole", "Teams")"
           data-url-delete="@Url.Action("DeleteRole", "Teams")"
           data-url-clone="@Url.Action("CloneRole", "Teams")"
           data-column-targets="@(canManageRoles ? "0, 4, 5, 6, 7" : "0, 4, 5, 6")" />
    <script>
        var _rolesDataEl = document.getElementById('js-roles-data');
        var _teamId = parseInt(_rolesDataEl.getAttribute('data-team-id'), 10);
        var _urlCreateRole = _rolesDataEl.getAttribute('data-url-create');
        var _urlUpdateRole = _rolesDataEl.getAttribute('data-url-update');
        var _urlDeleteRole = _rolesDataEl.getAttribute('data-url-delete');
        var _urlCloneRole = _rolesDataEl.getAttribute('data-url-clone');
        var _columnTargets = _rolesDataEl.getAttribute('data-column-targets').split(',').map(function (s) { return parseInt(s.trim(), 10); });

        $(document).ready(function () {
            $('#rolesTable').DataTable({
                "order": [], // Keep server order (system first, then Manager, Member, Viewer, others)
