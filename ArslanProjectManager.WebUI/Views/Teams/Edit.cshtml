@model TeamEditViewModel

@{
    ViewData["Title"] = "Edit Team";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-pencil-square"></i> Edit Team
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TeamId" />
                    
                    <div class="mb-3">
                        <label asp-for="TeamName" class="form-label">
                            <i class="bi bi-people"></i> Team Name
                        </label>
                        <input asp-for="TeamName" class="form-control" />
                        <span asp-validation-for="TeamName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ManagerId" class="form-label">
                            <i class="bi bi-person-badge"></i> Team Manager
                        </label>
                        <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.ManagerId"></select>
                        <span asp-validation-for="ManagerId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
